[user]
	name = sanpi
	email = sanpi@homecomputing.fr
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /home/sanpi/.gitignore/Global/vim.gitignore
[alias]
	a = add
	b = branch
	d = diff
	h = help
	s = status -s
	co = checkout
	dc = diff --cached
	fc = !vim $(git ls-files -u | cut -f2 | uniq | xargs echo)
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lo = log --stat
	pr = pull --rebase
	st = status
	new = !sh -c 'git log "$@" @{1}..@{0}'
	vim = !vim $(git ls-files -m -z | xargs -0 echo)
	info = !~/.git-contrib/git-info
	serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	vimall = !vim $(git ls-files -m -o --exclude-standard -z | xargs -0 echo)
	svn-update = !sh -c 'git stash save "Pre svn-up stash" && git svn rebase && git stash pop'
	fix-conflits = !vim $(git ls-files -u | cut -f2 | uniq | xargs echo)
[pager]
	log = perl ~/.git-contrib/diff-highlight | less
	show = perl ~/.git-contrib/diff-highlight | less
	diff = perl ~/.git-contrib/diff-highlight | less
[include]
	path = .gitconfig.obs
[rerere]
	enabled = 1
[merge]
	tool = vimdiff
