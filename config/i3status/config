general {
    colors = true
    interval = 1
}

order += "ipv6"
order += "run_watch VPN"
order += "wireless wlan0"
order += "ethernet eth0"
order += "cpu_usage"
order += "volume master"
order += "time"

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

wireless wlan0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

ethernet eth0 {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = "E: %ip"
    format_down = "E: down"
}

cpu_usage {
    format = "CPU: %usage"
}

volume master {
    format = "â™ª %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

time {
    format = "%x %X"
}
