widget "*NautilusPathBar.GtkButton*" 		style "nautilus-pathbar-button"
widget "Nautilus*left_slider*"			style "nautilus-pathbar-button"
widget "Nautilus*right_slider*"			style "nautilus-pathbar-button-right"

