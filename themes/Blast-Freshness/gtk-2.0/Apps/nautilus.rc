widget "Nautilus*FMTreeView.GtkTreeView"	style "nautilus-sidebar-color"
widget "*.NautilusEmblemSidebar.*" 		style "nautilus-sidebar-color"
widget "Nautilus*NautilusNotesViewer.*"		style "nautilus-sidebar-color"
widget "Nautilus*NautilusInformationPanel"	style "nautilus-sidebar-color"


widget "*EelWrapTable.GtkEventBox" 		style "nautilus-emblem"


widget "*.GtkPathBar.*GtkToggleButton*"		style "nautilus-pathbar"
