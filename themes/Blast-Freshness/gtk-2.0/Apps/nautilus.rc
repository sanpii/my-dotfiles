widget "NautilusPropertyBrowser.GtkVBox.GtkHBox.GtkVBox.GtkEventBox"		style "nautilus-emblem-dialog-view"

widget "NautilusPropertyBrowser.GtkVBox.GtkEventBox"				style "statusbar-fix"

widget "*GtkModeButton*"			style "nautilus-mode-button"
